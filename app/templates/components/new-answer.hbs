{{#if addNewAnswer}}
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input class="form-control" value=name id="name"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input class="form-control" value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="rating">Rating</label>
        {{input class="form-control" value=rating id="rating"}}
      </div>
      <button class="btn btn-default" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}

{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input class="form-control" value=name id="name"}}

      </div>
      <div class="form-group">
        <label for="title">Title</label>
        {{input class="form-control" value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input class="form-control" value=content id="content"}}
      </div>


      <button class="btn btn-default" class="btn btn-default" {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
